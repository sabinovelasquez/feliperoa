%section.instagram#instagram{ :'ng-controller' => 'instagramCtrl' }
  .container
    %h2.text-center
      Instagram
    .insta
      .col-sm-12
        %p.text-center{ :'ng-hide' => 'photos' }
          Loading instagram...
      .col-xs-6.col-sm-3.photo{ :'ng-repeat' => 'photo in photos', :'ng-style' => '{"background":"url({{photo.images.standard_resolution.url}})"}' }
        %a{ :'href' => '{{photo.link}}', :'target' => '_blank' }
          %img.img-responsive{ :'ng-src' => '{{photo.images.standard_resolution.url}}' }
      %a.btn.instafollow{ :'href' => 'https://www.instagram.com/felipe.roa.guitar/', :'target' => '_blank' }
        %i.fa.fa-instagram
        follow me
